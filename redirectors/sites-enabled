
<VirtualHost *:80>
ServerName ekoparty.xyz
ProxyPreserveHost On
ProxyRequests Off

ProxyPreserveHost On
ProxyRequests Off
  ProxyPass /  http://backend.xyz/
  ProxyPassReverse /  http://backend.xyz/
</VirtualHost>

<VirtualHost *:443>
ServerName ekoparty.xyz
# Enable SSL
SSLEngine On
# Trust Self-Signed Certificates generated by Cobalt Strike
SSLProxyVerify none
SSLProxyCheckPeerCN off
SSLProxyCheckPeerName off

SSLCertificateFile      /etc/letsencrypt/live/ekoparty.xyz/cert.pem
SSLCertificateKeyFile   /etc/letsencrypt/live/ekoparty.xyz/privkey.pem
SSLCertificateChainFile /etc/letsencrypt/live/ekoparty.xyz/chain.pem
# Enable Proxy
SSLProxyEngine On
  ProxyPass /  https://backend.xyz/
  ProxyPassReverse /  https://backend.xyz/
</VirtualHost>

